{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "concordialang-types/*": [ "node_modules/concordialang-types/dist/*" ],
            "concordialang-plugin/*": [ "node_modules/concordialang-plugin/dist/*" ]
        },
        "outDir": "dist",
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "allowJs": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "keyofStringsOnly": true
    },
    "include": [
        "data",
        "lib",
        "modules",
        "main.ts"
    ],
    "exclude": [
        "__tests__",
        "node_modules",
        "typings/globals",
        "dist",
        "modules/req/alt-lexer"
    ]
}