{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "allowJs": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "__tests__",
        "data",
        "lib",
        "modules",
        "plugins",
        "main.ts"
    ],
    "exclude": [
        "node_modules",
        "typings/globals",
        "dist",
        "modules/req/alt-lexer"
    ]
}